{
  "name": "docker-admin-helper",
  "version": "0.0.1",
  "description": "App to help system administrator in handling Docker images access rights, images state",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build . && yarn copyfiles",
    "test": "jest --runInBand",
    "dev": "nodemon -e ts --ignore 'dist/*' --exec \"yarn devbuildandrun\"",
    "prod": "MODE_ENV=PROD node ./dist/index.js",
    "clean": "rm -r dist",
    "copyfiles": "cp -r ./views/* ./dist/public",
    "devbuildandrun": "yarn build && MODE_ENV=DEV node ./dist/index.js"
  },
  "author": "Anton Krotyuk",
  "license": "MIT",
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "bcrypt": "^5.1.0",
    "bootstrap": "^5.2.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jquery": "^3.6.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.6.6",
    "pino": "^8.7.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/bootstrap": "^5.2.5",
    "@types/cors": "^2.8.12",
    "@types/expect-puppeteer": "^5.0.1",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.0",
    "@types/jquery": "^3.5.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.11.3",
    "@types/supertest": "^2.0.12",
    "jest": "^29.2.1",
    "nodemon": "^2.0.19",
    "pino-pretty": "^9.1.1",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  }
}
