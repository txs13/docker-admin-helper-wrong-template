{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "types": ["node", "jest"],
    "target": "es5",
    "outDir": "../dist",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "rootDir": ".",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
  },
  "include": ["./**/*"],
}
